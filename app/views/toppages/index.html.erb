<section class="pic-table section" id="about">
  <div class="container">
    <% if logged_in? %>
      <div class="text-white d-flex flex-wrap justify-content-center ">
        <% @posts.each do |post| %>
          <div class="d-flex flex-column  m-2" >
              <div class= "pic">
                <%=  link_to post.image.url,width: "500",height: "auto" ,'data-lightbox': post.image do %>
                 <%= image_tag(post.image.url,width: "200",height: "200") if post.image? %>
                <% end %>
              </div>

             <div class="d-flex flex-row">
               <p class="mr-3">
                 <%= post.title %>
               </p>
               <p>
                 <%= link_to 'Show', post %>
               </p>
             </div>
          </div>
        <% end %>
      </div>


      <!--div class="d-flex justify-content-center">
      ページネーションするときはここに記述する
      </div-->
    <% else %>


      <div class="text-white   d-flex flex-wrap justify-content-center	 ">
        <% @posts.each do |post| %>
            <div class="d-flex flex-column m-2" >
              <%=  link_to post.image.url,width: "500",height: "200" ,'data-lightbox': post.image do %>
                <%= image_tag(post.image.url,width: "200",height: "auto")  %>
              <% end %>
              <div class="d-flex flex-row">
                <p class="mr-3">
                  <%= post.title %>
                </p>
              </div>
            </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>




