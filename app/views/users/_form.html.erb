
<%= form_with(model: user, local: true) do |form| %>

    <div class="row mt-5">
        <div class="col-lg-12">
            <div class="form-kerri contact_form">
                <div id="message"></div>
                  <form method="post"  name="contact-form" >
                      <div class="row"><!-- ＊＊＊　画像選択　＊＊＊＊-->
                          <div class="col-lg-12">
                              <div class=" text-white mb-2">
                                <% if user.image? %>
														      <%= image_tag user.image.url,width: "400px",height: "auto" %>
														    <% else %>
														      <%= image_tag "/images/camera1.jpg", :size => '100x100' %>
														    <% end %>
                              </div>
                              <button type="button" class="btn btn-outline-secondary rounded-pill ">
                                <%= form.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
                              </button>
                          </div>
                      </div>
                      <div class="row"><!-- ＊＊＊　ユーザー　＊＊＊＊-->
                          <div class="col-lg-12">
                              <div class="text-white">
                                <%= form.label :name, "ユーザー名" %>
                              </div>
                              <div class="form-group mt-2">
                                <%= form.text_field :name %>
                              </div>
                          </div>
                      </div>
                      <div class="row"><!-- ＊＊＊　説明文　＊＊＊＊-->
                          <div class="col-lg-12">
                              <div class="text-white">
                                <%= form.label :email, "メールアドレス" %>
                              </div>
                              <div class="form-group mt-2">
                              	<%= form.text_field :email %>
                              </div>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-lg-12 text-right">
                              <div class= "d-flex align-items-center flex-column mb-5"><%= form.submit '更新', class: 'btn btn-light'%></div>
                              <div id="simple-msg"></div>
                          </div>
                      </div>
                  </form>
            </div>
        </div>
    </div>
<% end %>

