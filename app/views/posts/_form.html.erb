<%= form_with(model: post, local: true) do |form| %>
    <!-- エラーメッセージ-->
    <div class="">
      <% if post.errors.any? %>
        <div id="error_explanation" class="mb-5">
          <ul style="list-style: none;">
            <% post.errors.full_messages.each do |message| %>
              <li class="text-danger pr-4"><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="row mt-5">
                    <div class="col-lg-12">
                        <div class="form-kerri contact_form">
                            <div id="message"></div>
                            <form method="post"  name="contact-form" >
                                <div class="row"><!-- ＊＊＊　画像選択　＊＊＊＊-->
                                    <div class="col-lg-12">
                                        <div class=" text-white">
                                          <%= form.label :image %>
                                        </div>
                                        <div class="form-group mt-2">
                                          <%= form.file_field :image %>
                                        </div>
                                    </div>
                                </div>
                                <div class="row"><!-- ＊＊＊　タイトル　＊＊＊＊-->
                                    <div class="col-lg-12">
                                        <div class="text-white">
                                          <%= form.label :title %>
                                        </div>
                                        <div class="form-group mt-2">
                                          <%= form.text_field :title %>
                                        </div>
                                    </div>
                                </div>
                                <div class="row"><!-- ＊＊＊　説明文　＊＊＊＊-->
                                    <div class="col-lg-12">
                                        <div class="text-white">
                                          <%= form.label :text %>
                                        </div>
                                        <div class="form-group mt-2">

                                            <%= form.text_area :text ,size: "40x5"%>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12 text-right">
                                        <div class= "d-flex align-items-center flex-column mb-5"><%= form.submit '完了', class: 'btn btn-light'%></div>
                                        <div id="simple-msg"></div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

    <!-- ＊＊＊　完了ボタン　＊＊＊＊-->

<% end %>



